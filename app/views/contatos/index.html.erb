<h1>Meus Contatos</h1>
<%= link_to 'Novo Contato', new_contato_path, class: 'btn btn-primary pull-right' %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.email %></td>
        <td><%= contato.user_id %></td>
        <td><%= link_to 'Show', contato, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) , class: 'btn btn-primary'%></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

